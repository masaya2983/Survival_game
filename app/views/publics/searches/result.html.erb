<div class='container px-5 px-sm-0'>
  <div class="d-flex">
    <%= render 'public/searches/form' %>
      <%= render 'public/categories/category_searched' %>
  </div>
  <div class='row'>
   <table class: "table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
　        <%= link_to '新しい順', fields_path(latest: "true") %>
          <%= link_to '古い順', fields_path(old: "true") %>z
        <th>Title</th>
        <th>Review</th>
        <th>Category</th>
      </tr>
    </thead>
      <% @fields.each do |field| %>

    <tbody>
      <tr>
        <td><%= link_to(field.customer) do %>
          <%= image_tag field.customer.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= field.name %></td>

        <td><%= field.review %></td>
        <td><%= render "public/favorites/btn", field: field %></td>
        <td>コメント数<%= field.comments.count %></td>
        <td><%= link_to "show", field, class: "btn btn-success" %></td>
      </tr>
    </tbody>
    <% end %>
   </table>
  </div>
</div>