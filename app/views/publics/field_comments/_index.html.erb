<table>
  <tbody>
      <% field.field_comments.each do |field_comment| %>
      <tr>
        
        <td>
          <%= link_to customer_path(field_comment.user) do %>
            <%= image_tag field_comment.customer.get_profile_image, size: "100x100" %><br>
            <%= field_comment.customer.name %>
          <% end %>
        </td>
        <td><%= field_comment.comment %></td>
        <td>
          <% if field_comment.customer == current_customer %>
            <%= link_to "Destroy", field_field_comment_path(field, field_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>