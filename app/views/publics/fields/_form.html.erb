<%= form_with model: field, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control field_name' %>
  </div>
  
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control field_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
