<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% fields.each do |field| %>
      <tr>
        <td><%= link_to(field.customer) do %>
          <%= image_tag field.customer.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
         <td><%= l field.created_at, format: :short %></td>

        <td><%= link_to field.title,field, class: "field_#{field.id}" %></td>
        <td><%= field.body %></td>
        <td class=<%= "favorite-" + field.id.to_s %> >
            <%= render "publics/favorites/btn", field: field %>
        </td>
        <td><%= render "publics/field_comments/counter", field: field %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate fields, params: {latest: params[:latest], old: params[:old],}%>