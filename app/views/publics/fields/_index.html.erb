<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% fields.each do |field| %>
      <tr>
        <td><%= link_to(field.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to field.title,field, class: "book_#{field.id}" %></td>
        <td><%= field.body %></td>
        <td class=<%= "favorite-" + field.id.to_s %> >
            <%= render "publicks/favorites/btn", field: field %>
        </td>
        <td><%= render "publicks/field_comments/counter", bfield: field %></td>
      </tr>
    <% end %>
  </tbody>
</table>